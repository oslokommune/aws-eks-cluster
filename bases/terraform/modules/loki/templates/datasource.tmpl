apiVersion: v1
kind: Secret
metadata:
  name: loki-datasource
  labels:
    grafana_datasource: "1"
type: Opaque
stringData:
  loki-datasource.yaml: |-
    apiVersion: 1
    datasources:
    - name: Loki
      type: loki
      access: proxy
      orgId: 1
      url: http://loki:3100
      basicAuth: false
      jsonData:
        tlsSkipVerify: true
      version: 1
      editable: false
